<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Umeni Carrito de Compras</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/851c995492.js" crossorigin="anonymous"></script>    
    <link rel="stylesheet" href="/css/carrito.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>


<body>
    <header>
        <%- include('./partials/header.ejs') %>
    </header>
    <div class="contenedor">
    <main>
        <section>
            <div class="top-header">
                <div class="volver" href="#"><i class="fas fa-arrow-left"></i></div>
                <h2>Mi Carrito</h2>
            </div>
        </section>
        <section class="compra">
            <article>
                <div><img src="/images/BrutNature-Espumantes.png" alt="paisaje1" class="imagen"></div>
                <div class="info">
                    <h3 class="autor">Brut Nature</h3>
                    <p class="tamaño">Bodega Umeni</h4>
                    <p class="precio">ARS $2.900</p>
                    <div class="eliminar"><i class="fas fa-trash"></i></div>
                    <div class="cantidad">
                        <i class="far fa-minus-square"></i>
                        <input class="cuantia" type="text" inputmode="numeric" id="cuantia" name="cuantia" min="1" max="10">
                        <i class="far fa-plus-square"></i>
                    </div>
                </div>
            </article>
            <br>
            <article>
                <div><img src="/images/Malbec-Tintos.png" alt="paisaje1" class="imagen"></div>
                <div class="info">
                    <h3 class="autor">Malbec</h3>
                    <p class="tamaño">Bodega Umeni</h4>
                    <p class="precio">ARS $5.900</p>
                    <div class="eliminar"><i class="fas fa-trash"></i></div>
                    <div class="cantidad">
                        <i class="far fa-minus-square"></i>
                        <input class="cuantia" type="number" id="cuantia" name="cuantia" min="1" max="10">
                        <i class="far fa-plus-square"></i>
                    </div>
                </div>
            </article>
            <br>
            <div>
                <input type="text" class="descuento" rows="1" cols="30" maxlength="9" placeholder="Agregar cupón de descuento">
            </div>
        </section>
        <br>
        <section class="detalles">
            <div class="subtotal">
                <h3>Subtotal</h3>
                <h5>ARS $8.900</h5>
            </div>
            <div class="iva">
                <h3>IVA (%)</h3>
                <h5>ARS $0,00</h5>
            </div>
            <div class="envio">
                <h3>Envio</h3>
                <h5>ARS $500</h5>
            </div>
            <div class="total">
                <h3>Total</h3>
                <h5>ARS $9.400</h5>
            </div>  
        </section>
        <br>
        <section class="realizar">
        <form action="/" method="POST">
            <input type="submit" value="Comprar"><i class="fas fa-long-arrow-right"></i>
        </form>
        </section>
    </main>
    <footer>
        <%- include('./partials/footer.ejs') %>
    </footer>
    
  
</div>  
</body>
</html>